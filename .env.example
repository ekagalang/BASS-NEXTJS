# ============================================
# ENVIRONMENT VARIABLES
# Copy this file to .env.local for development
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Prisma Database URL (supports MySQL, PostgreSQL, SQLite, etc.)
# Format for MySQL: mysql://USER:PASSWORD@HOST:PORT/DATABASE
# Format for PostgreSQL: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Format for SQLite: file:./dev.db
DATABASE_URL="mysql://root:your_mysql_password_here@localhost:3306/bass_training"

# Legacy individual fields (for backward compatibility with setup scripts)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=bass_training

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ============================================
# AUTHENTICATION
# ============================================
# Generate dengan: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_here
JWT_EXPIRES_IN=7d

# Session secret
SESSION_SECRET=your_session_secret_here

# ============================================
# UPLOAD CONFIGURATION
# ============================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_DIR=./public/uploads
NEXT_PUBLIC_UPLOAD_URL=http://localhost:3000/uploads

# Allowed file types (comma separated)
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# ============================================
# EMAIL CONFIGURATION (Optional - untuk production)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@basstrainingacademy.com

# ============================================
# SOCKET.IO (Chat System)
# ============================================
SOCKET_PORT=3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3000

# ============================================
# EXTERNAL APIs (Optional)
# ============================================
# Google Maps API (untuk lokasi pelatihan)
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Google Analytics (untuk tracking)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# PAYMENT GATEWAY (Future Feature)
# ============================================
# MIDTRANS_SERVER_KEY=your_server_key
# MIDTRANS_CLIENT_KEY=your_client_key
# MIDTRANS_IS_PRODUCTION=false

# ============================================
# AI CHATBOT (Future Enhancement)
# ============================================
# OPENAI_API_KEY=sk-xxxxxxxxxxxxx
# CLAUDE_API_KEY=sk-ant-xxxxxxxxxxxxx

# ============================================
# DEVELOPMENT TOOLS
# ============================================
# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Show detailed errors (development only)
SHOW_ERROR_DETAILS=true